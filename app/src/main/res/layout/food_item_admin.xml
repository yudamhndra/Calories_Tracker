<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/rounded_mint_bg">

    <TextView
        android:id="@+id/txt_foodname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Makanan"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginBottom="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/txt_DeskripsiMakanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="190 cal/servings (100g)"
        android:textSize="14sp"
        android:layout_below="@id/txt_foodname"
        android:layout_alignParentStart="true"/>

    <ImageButton
        android:id="@+id/btnEdit"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@id/btnDelete"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/rounded_warning_btn"
        android:src="@drawable/baseline_mode_edit_outline_24"
        android:text="Edit"
        android:onClick="onEditClick" />

    <ImageButton
        android:id="@+id/btnDelete"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/rounded_danger_btn"
        android:src="@drawable/baseline_delete_24"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/danger"
        android:onClick="onDeleteClick"/>

</RelativeLayout>
